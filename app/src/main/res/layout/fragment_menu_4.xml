<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff6e7">


    <ImageView
        android:layout_width="159.16dp"
        android:layout_height="150dp"
        app:srcCompat="@drawable/logo_end"
        android:layout_marginTop="36dp"
        android:id="@+id/logo"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/username"
        android:textAlignment="center"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:background="@drawable/shape"

        android:layout_marginTop="19dp"
        android:layout_below="@+id/logo"
        android:layout_centerHorizontal="true"
        android:hint="Username" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:layout_below="@+id/username"
        android:layout_alignRight="@+id/username"
        android:layout_alignEnd="@+id/username"
        android:layout_marginTop="13dp"
        android:id="@+id/password"
        android:textAlignment="center"
        android:background="@drawable/shape"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:hint="Password" />

    <Button
        android:text="Login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/password"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:id="@+id/login"
        android:background="@drawable/login"
        android:textColor="#000000"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:id="@+id/singup"
        android:textSize="18dp"
        android:textColor="#000000"
        android:text="Not a user? Sign Up here." />

    <TextView
        android:layout_width="wrap_content"
        android:layout_alignParentBottom="true"
        android:id="@+id/address"
        android:textColor="#aa3619"
        android:background="#ffe8c3"
        android:gravity="center"
        android:textSize="12dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_height="67dp"
        android:text="C-209, 1st Floor, Sushant Lok, Phase-1, Gurgaon 122001, Haryana
        info@shirdisaiglobalfoundation.org"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>